{
  "project": {
    "name": "SimpleFitness",
    "type": "ios",
    "language": "swift",
    "framework": "swiftui",
    "summary": {
      "description": "A simple fitness tracking application that allows users to manually log workouts with sets, reps, and weights. Includes optional GPS tracking for running and biking activities.",
      "core_features": [
        "Manual workout entry with sets and reps",
        "Weight tracking for strength exercises",
        "Duration and distance logging",
        "Optional GPS tracking for outdoor activities",
        "Workout history viewing"
      ],
      "target": "personal use"
    }
  },
  "structure": {
    "root": "/",
    "src": "/SimpleFitness",
    "views": "/SimpleFitness/Views",
    "models": "/SimpleFitness/Models",
    "viewModels": "/SimpleFitness/ViewModels",
    "services": "/SimpleFitness/Services",
    "resources": "/SimpleFitness/Resources"
  },
  "frameworks": [
    "SwiftUI",
    "CoreData",
    "CoreLocation"
  ],
  "fileTypes": {
    "view": {
      "extension": ".swift",
      "template": "import SwiftUI\n\nstruct {name}View: View {\n    var body: some View {\n        Text(\"{name}\")\n    }\n}\n\nstruct {name}View_Previews: PreviewProvider {\n    static var previews: some View {\n        {name}View()\n    }\n}"
    },
    "model": {
      "extension": ".swift",
      "template": "import Foundation\n\nstruct {name} {\n    // Properties go here\n}"
    },
    "viewModel": {
      "extension": ".swift",
      "template": "import Foundation\n\nclass {name}ViewModel: ObservableObject {\n    // ViewModel logic goes here\n}"
    }
  },
  "conventions": {
    "naming": {
      "views": "{Name}View",
      "models": "{Name}",
      "viewModels": "{Name}ViewModel"
    }
  },
  "linting": {
    "rules": [
      "swiftlint:disable force_cast",
      "swiftlint:disable force_try"
    ]
  },
  "codeGeneration": {
    "preferences": {
      "indentation": "spaces",
      "spacesPerIndent": 4
    }
  },
  "dependencies": {
    "swift-package-manager": [
      {
        "name": "SwiftUI",
        "url": "https://developer.apple.com/documentation/swiftui"
      }
    ]
  },
  "customInstructions": [
    "When generating CoreData models, include @NSManaged property wrappers",
    "Use MVVM architecture pattern",
    "Prefer SwiftUI over UIKit for all user interface components",
    "Implement CoreLocation services in a separate LocationManager class"
  ]
}
